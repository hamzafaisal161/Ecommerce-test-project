<div class = 'mt-4' >
  <h5>Edit your comment...</h5>
  <%= form_with model: [@product,@comment] do |f| %>
    <div class = 'field form-group' >
      <%= f.text_field :description, placeholder: 'Enter a comment', class:'form-control mr-sm-2', required: true %>
    </div>
    <div class = 'field form-group' >
      <%= f.file_field :file,class:'form-control', :multiple => true %>
    </div>
      <%= f.submit 'Comment',class:'btn py-2 px-3 btn-outline-success m-2 my-sm-0' %>
    </div>
  <% end %>
</div>
