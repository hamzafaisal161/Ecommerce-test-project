<div class = 'card-header' >
  <% if product.avatar.attached? %>
      <img class = 'product-img' src = '<%= cloudinary_url(product.avatar.first.key) %>' alt='Product-image' >
  <% else %>
    <img class = 'product-img' src = 'https://res.cloudinary.com/devsinc-hamza/image/upload/v1664980708/ecommerce/no-product-image_m6t4yl.png' alt = 'Product-image' >
  <% end %>
  <div class = 'card-body' >
    <h5 class = 'card-title' > <%= product.name %></h5>
    <p class = 'card-text' ><%= number_to_currency(product.price) %></p>
    <%= pluralize(product.comments.count, ' Comments') %>
    <br/>
    <br/>
    <%= link_to 'Show', product_path(product), class: 'btn btn-secondary' %>
    <%= link_to 'Remove from Wishlist', delete_product_user_wishlist_path(product), class: 'btn btn-danger' %>
  </div>
</div>
<br/>

