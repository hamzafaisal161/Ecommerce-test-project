<nav class = 'navbar navbar-expand-lg navbar-dark bg-dark' >
  <%= link_to 'Ecommerce App', root_path, class:'nav-link' %>
  <button class = 'navbar-toggler' type = 'button' data-toggle = 'collapse' data-target = '#navbarSupportedContent' aria-controls = 'navbarSupportedContent' aria-expanded = 'false' aria-label = 'Toggle navigation' >
    <span class = 'navbar-toggler-icon' ></span>
  </button>

  <div class = 'collapse navbar-collapse' id = 'navbarSupportedContent' >
    <ul class = 'navbar-nav mr-auto' >
      <li class = 'nav-item' >
        <%= link_to 'View All Products', products_path, class:'nav-link' %>
      </li>
      <li class = 'nav-item' >
        <%= link_to 'View Cart', cart_path(@cart.id), class:'nav-link' %>
      </li>
      <% if user_signed_in? %>
      <li class = 'nav-item' >
        <%= link_to 'Edit Profile', edit_user_registration_path, class:'nav-link' %>
      </li>
      <li class = 'nav-item' >
        <%= link_to 'Add Products', new_user_product_path(current_user.id), class:'nav-link' %>
      </li>
      <li class = 'nav-item' >
        <%= link_to 'View Your Products',  user_products_path(current_user.id), class:'nav-link' %>
      </li>
      <li class = 'nav-item' >
        <%= link_to 'View Your Orders', user_orders_path(current_user.id), class:'nav-link' %>
      </li>
      <% if current_user.wishlist.present? %>
      <li class = 'nav-item' >
        <%= link_to 'View Your Wishlist', user_wishlist_path(current_user.id), class:'nav-link' %>
      </li>
      <% end %>
      <li class = 'nav-item' >
        <%= link_to 'Logout', destroy_user_session_path, class:'nav-link', :method => :delete %>
      </li>
      <% else %>
       <li class = 'nav-item' >
        <%= link_to 'Sign up', new_user_registration_path, class:'nav-link' %>
      </li>
      <li class = 'nav-item' >
        <%= link_to 'Sign in', new_user_session_path, class:'nav-link' %>
      </li>
      <% end %>
    </ul>
    <form class = 'form-inline my-2 my-lg-0' >
      <%= render 'search/form' %>
    </form>
  </div>
</nav>
